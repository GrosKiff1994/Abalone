le paintComponent du panneauJeu

public void paintComponent(Graphics g) {
		super.paintComponent(g);
		// parcours du tableau
		for (int i = 0; i < Plateau.HEIGHT; i++) {
			for (int j = 0; j < Plateau.WIDTH; j++) {
				Case caseCourante = plateau.getCase(i, j);
				// case existe ?
				if (caseCourante != null) {
					// case occupée ?
					if (caseCourante.estOccupee()) {

						g.setColor(Color.BLACK);
						g.fillOval(j * DIMBOULE + i * DIMBOULE / 2, i
								* (DIMBOULE - DIMBOULE / 8), DIMBOULE + 4,
								DIMBOULE + 4);

						// selon la couleur
						switch (caseCourante.getBoule().getCouleur()) {
						case NOIR:
							g.setColor(Color.DARK_GRAY);
							break;
						case BLANC:
							g.setColor(Color.WHITE);
							break;
						default:
						}
					} else {
						g.setColor(Color.LIGHT_GRAY);
					} // fin case occupée
					g.fillOval(j * DIMBOULE + i * DIMBOULE / 2, i
							* (DIMBOULE - DIMBOULE / 8), DIMBOULE, DIMBOULE);
				} // fin case existe

				/*
				 * else { g.setColor(Color.DARK_GRAY); }
				 */

			}
		}

	}